{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Echo Response",
          "weight": "bolder",
          "size": "medium"
        },
        {
          "type": "TextBlock",
          "text": "${reply}",
          "wrap": true,
          "size": "large"
        },
        {
          "type": "TextBlock",
          "text": "${description}",
          "wrap": true,
          "isSubtle": true
        }
      ]
    }
  ]
}
