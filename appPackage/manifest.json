{
    "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
    "manifestVersion": "1.19",
    "version": "1.0.8",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "EffortlessAPI",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/privacy",
        "termsOfUseUrl": "https://www.example.com/termofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "test-copilot-extension${{APP_NAME_SUFFIX}}",
        "full": "Full name for test-copilot-extension"
    },
    "description": {
        "short": "Short description for test-copilot-extension",
        "full": "Full description for test-copilot-extension"
    },
    "accentColor": "#FFFFFF",
    "copilotAgents": {
        "declarativeAgents": [            
            {
                "id": "declarativeAgent",
                "file": "declarativeAgent.json"
            }
        ]
    },
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}